Package: mfp2
Type: Package
Title: Multivariable Fractional Polynomial Models and Extensions
Version: 0.1.3.9004
Date: 2023-05-25
Authors@R: c(
  person("Edwin", "Kipruto", role = c("aut", "cre"), email = "edwin.kipruto@uniklinik-freiburg.de"),
